{
  "name": "dg-panchal-website",
  "version": "1.0.0",
  "description": "DG Panchal - Precision Engineering Website with Cross-Browser Testing",
  "main": "index.html",
  "scripts": {
    "test": "playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox", 
    "test:webkit": "playwright test --project=webkit",
    "test:edge": "playwright test --project=edge",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse-report.html",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --preset=perf --form-factor=mobile --output html --output-path ./reports/lighthouse-mobile.html",
    "serve": "http-server . -p 3000 -c-1",
    "axe-test": "node ./tests/accessibility/axe-test.js",
    "validate-html": "html-validate *.html",
    "validate-css": "stylelint assets/css/*.css",
    "test:all": "npm run validate-html && npm run validate-css && npm run test && npm run axe-test"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.2",
    "lighthouse": "^11.3.0",
    "lighthouse-ci": "^0.12.0",
    "html-validate": "^8.7.2",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "http-server": "^14.1.1",
    "axe-core": "^4.8.2"
  },
  "keywords": [
    "cross-browser-testing",
    "seo-optimization",
    "precision-engineering",
    "gear-manufacturing"
  ],
  "author": "DG Panchal - DG Group",
  "license": "MIT"
}
